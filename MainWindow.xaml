<Window x:Class="VKPhotoDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VK Photo Downloader" 
        Height="120" Width="395" Loaded="Window_Loaded" 
        WindowStyle="ToolWindow" SnapsToDevicePixels="True" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="Звідки" Margin="10,4,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="albumURL" Text="vk.com/album1_0" Width="314" Margin="65,6,-279,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label Content="Куди" Height="40" Margin="10,31,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="saveDir" Text="" Width="253" Margin="65,33,-216,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Content="Огляд..." HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="56" Margin="323,33,-276,0" Click="Button_Click_1" />
        <Button Content="Закачати" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="76" Height="25" Margin="10,60,0,0" Click="Button_Click"/>
        <ProgressBar Name="progressBar" Margin="0,0,-285,0" Visibility="Hidden" />
    </Grid>
</Window>